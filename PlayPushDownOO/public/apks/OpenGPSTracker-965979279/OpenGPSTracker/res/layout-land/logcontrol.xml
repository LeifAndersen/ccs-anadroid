<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="center_horizontal" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <Button android:state_enabled="false" android:id="@id/logcontrol_start" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/logcontrol_start" />
        <Button android:state_enabled="false" android:id="@id/logcontrol_pause" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/logcontrol_pause" />
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <Button android:state_enabled="false" android:id="@id/logcontrol_stop" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/logcontrol_stop" />
        <Button android:state_enabled="false" android:id="@id/logcontrol_resume" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/logcontrol_resume" />
    </LinearLayout>
</LinearLayout>
